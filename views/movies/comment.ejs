<%-include ('../partials/header')%>


<section class="comments-container">

        
    <div class="comment-content">
                  <h2>Registro</h2>
                  <form action="/register/create" method="post" class="form-pattern">
                      <div class="form-pattern-control">
                       <label for="name">nome</label>
                       <input type="text" name="name" placeholder="Digite seu nome" required>
                      </div>
                     <div class="form-pattern-control">
                      <label for="email">e-mail</label>
                      <input type="email" name="email" placeholder="Digite o seu email" required>
                     </div>
                     <div class="form-pattern-control">
                      <label for="password">senha</label>
                      <input type="password" name="password" placeholder="Insira sua senha" required>
                     </div>
                     <div class="form-pattern-control">
                      <label for="confirmpassword">confirmação da senha</label>
                      <input type="password" name="confirmpassword" placeholder="Confirme sua senha" required>
                     </div>
          
                     <input type="submit" value="Entrar" class="btn">
                  </form>
                  <p>Já possui conta? <a href="/login">clique aqui!</a></p>
              </div> 
  </section>



<%- include ('../partials/footer') %>